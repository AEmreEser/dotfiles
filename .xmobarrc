-- vim: set filetype=yaml:
  Config { font = "Terminus:style=Regular:size=10"
			 , additionalFonts = ["xft:FontAwesome-9"]
       , bgColor = "black"
       , fgColor = "grey"
       , position = TopW L 100
			 , lowerOnStart = True
       , commands = [ Run Cpu ["-L","0","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Date "%a %b %_d %l:%M" "date" 10
                    , Run StdinReader
                    , Run Volume "default" "Master" ["-t", "Vol: <volume>%"] 10
										, Run Battery 
												["-t", "Bat: <acstatus>"
													, "-L", "25"
                          , "-H", "50"
                          , "-l", "red"
                          , "-n", "yellow"
                          , "-h", "green"
                          , "--"
                          , "-O", "Charging <left>%"
                          , "-o", "Discharging <left>%"
                          , "-i", "Full"
                          ] 60
										, Run Wireless "wlp3s0" ["-t", "<essid> strength: <quality>"] 10
                    , Run Com "music-info" [] "musicInfo" 10
                    , Run Com "vpn-info" [] "vpnInfo" 20
                    , Run DynNetwork 
                    [ "--template", "dw:<rx>kB/s"
                        , "--Low" , "1000"
                        , "--High", "5000"
                        , "--low" , "darkgreen"
                        , "--normal", "darkorange"
                        , "--high", "darkred"
                    ] 10
										]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% | <fc=cyan>%musicInfo%</fc>}<fc=#ee9a00>%date%</fc> | <fc=white>%battery%</fc>{ <fc=yellow>%default:Master%</fc> | <fc=grey>%dynnetwork%</fc> | <fc=grey>%wlp3s0wi%</fc> | %vpnInfo% | %cpu% | %memory% | %swap%"
  }
